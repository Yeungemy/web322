<div class="row">
    <div class="col-md-12">
        <h1>{{title}}<a href="/departments/add" class="btn btn-success 
        pull-right" style="margin-top:5px;">Add New Department</a></h1>
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <th>Department&nbsp;Number</th>
                    <th>Department&nbsp;Name</th>
                </thead>
                <tbody>
                    {{#each data}}
                    <tr>
                        <td><a href="/department/{{departmentId}}">{{departmentId}}</a></td>
                        <td><a href="/employees?department={{departmentId}}">{{departmentName}}</a></td>
                    </tr>
                    {{else}}
                    <tr>No&nbsp;Departments</tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        
    </div>
</div>